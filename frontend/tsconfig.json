{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["DOM", "ES2021"],
    "moduleResolution": "node",
    "module": "ESNEXT",
    "resolveJsonModule": true,
    "target": "ES2020",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "baseUrl": "src"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}

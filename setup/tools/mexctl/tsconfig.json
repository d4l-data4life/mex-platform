{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "resolveJsonModule": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "outDir": "build",
    "baseUrl": "src"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}